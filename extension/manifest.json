{
    "manifest_version": 2,
    "name": "Trello Folds (rbrosboel fork)",
    "version": "0.5.10",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128-96.png"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup.html"
    },
    "description": "Turn your Trello board into a Kanban system with WiP limits, combining lists, card count and collapsible lists",
    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["lib/jquery.js", "tdom.js", "trello-folds.js", "content.js"],
        "matches": ["https://trello.com/*"]
    }],
    "background": {"scripts": ["hot-reload.js"]},
    "web_accessible_resources": ["img/*.png"]
}